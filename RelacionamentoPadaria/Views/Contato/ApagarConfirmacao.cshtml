@model ContatosModel
@{
    ViewData["Title"] = "Confirmação de deleção de contato";
}

<div class="text-center">
    <br/>
    <h3>Realmente deseja apagar o contato @Model.Nome ? </h3>
    <br/>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar exlusão</a>
<a class="btn btn-danger btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
