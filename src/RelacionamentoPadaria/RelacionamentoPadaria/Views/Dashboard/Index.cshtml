@model DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Dashboard</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-header">
                <h3>Filtrar por data</h3>
                <form asp-action="Index" asp-controller="Dashboard" method="get">
                    <div class="row form-group">
                        <div class="col-3">
                            <label>Período Início</label>
                            <input class="form-control form-control-sm" type="date" name="dataInicio" value="@(TempData["dataInicio"] != null ? (Convert.ToDateTime(TempData["dataInicio"])).ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-3">
                            <label>Período Fim</label>
                            <input class="form-control form-control-sm" type="date" name="dataFim" value="@(TempData["dataFim"] != null ? (Convert.ToDateTime(TempData["dataFim"])).ToString("yyyy-MM-dd") : "")" />
                        </div>
                        <div class="col-3 mt-4">
                            <button type="submit">Filtrar por Data</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row form-group">
                <div class="col-6">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <h3 class="text-center">NPS</h3>
                        </div>
                        <div class="card-body text-center">
                            <span class="text-center">Média</span>
                            <br />
                            <span class="h3"><i class="fas fa-ticket-alt"></i></span>
                            <br>
                            <br>
                            <h3 class="text-center">@Model.MediaNps.ToString("N2")</h3>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card shadow mb-4">
                        <div class="card-header">
                            <h3 class="text-center">Tipos de Feedback</h3>
                        </div>
                        <div class="card-body text-center">
                            <div class="row">
                                <div class="col-6">
                                    <span>Elogios </span><br>
                                    <span class="h3 text-center"><i class="fas fa-thumbs-up"></i> @Model.TotalElogios</span>
                                </div>
                                <div class="col-6">
                                    <span>Sugestões </span><br>
                                    <span class="h3 text-center"><i class="fas fa-lightbulb"></i> @Model.TotalSugestoes</span>
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-6">
                                    <span>Reclamações </span><br>
                                    <span class="h3 text-center"><i class="fas fa-exclamation"></i> @Model.TotalReclamacoes</span>
                                </div>
                                <div class="col-6">
                                    <span>Denúncias </span><br>
                                    <span class="h3 text-center"><i class="fas fa-thumbs-down"></i> @Model.TotalDenuncias</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {

        })
    </script>
}